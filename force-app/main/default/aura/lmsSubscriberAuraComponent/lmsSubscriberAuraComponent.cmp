<aura:component
    controller="ContactController"
    implements="flexipage:availableForAllPageTypes"
>
    <aura:attribute name="contactId" type="Id" />
    <aura:attribute name="contact" type="Object" />

    <lightning:messageChannel
        type="Record_Selected__c"
        aura:id="recordSelected"
        onMessage="{!c.handleMessage}"
        scope="APPLICATION"
    />

    <force:recordData
        aura:id="service"
        recordId="{!v.contactId}"
        fields="['Name', 'Title', 'Phone', 'Email', 'Picture__c']"
        targetFields="{!v.contact}"
    />

    <lightning:card title="LMSAuraSubscriber" iconName="custom:custom30">
        <aura:set attribute="actions">
            <span class="aura">Aura Component</span>
        </aura:set>

        <div class="slds-m-around_medium">
            <aura:if isTrue="{!v.contact}">
                <img src="{!v.contact.Picture__c}" alt="Profile photo" />
                <p>{!v.contact.Name}</p>
                <p>{!v.contact.Title}</p>
                <p><lightning:formattedPhone value="{!v.contact.Phone}" /></p>
                <p><lightning:formattedEmail value="{!v.contact.Email}" /></p>
            </aura:if>
        </div>

        <div class="slds-card__footer">
            Subscribe to a message channel using Lightning Message Service in
            Aura
            <p>
                <a
                    class="slds-text-link"
                    href="https://github.com/trailheadapps/lwc-recipes/tree/master/force-app/main/default/aura/lmsSubscriberAuraComponent"
                    target="source"
                    >View Source</a
                >
            </p>
        </div>
    </lightning:card>
</aura:component>
